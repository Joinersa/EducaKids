<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.projetoslabex.educakids">

    <!-- android:largeHeap="true" -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.Splash"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MatematicaActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_matematica" />
        <activity
            android:name=".activities.LetrasActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_letras" />
        <activity
            android:name=".activities.RankingActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>